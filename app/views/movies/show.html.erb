<section class="movie-details">
    <div class="image">
    <%= image_tag @movie.image_file_name %>
  </div>
  <div class="details">
    <h1><%= @movie.title %></h1>
    <h2>
      <%= year_of(@movie) %> &bull; <%= @movie.rating %>
    </h2>
    <div>
      <%= link_to pluralize(@movie.reviews.count, "review"), movie_reviews_path(@movie) %>        
    </div>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= @movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
    </table>
    <div>
      <%= link_to "Write a review", new_movie_review_path(@movie), class: "review" %>
    </div>
    <section class="admin">
      <%=link_to "Edit", edit_movie_path(@movie), class: "button" %>
      <%= link_to "Delete Movie", movie_path(@movie), 
                   method: :delete, class: "button",
                   data: { confirm: "Are you sure?" } %> 
    </section>
  </div>
</section>