<h1>Edit: <%= @movie.title %></h1>
<%= form_with(model: @movie, local: true) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :description %>
	<%= f.text_area rows: 7 %>
	<%= f.label :released_on %>
	<%= f.date_field :released_on %>
	<%= f.label :total_gross %>
  <%= f.number_field :total_gross %>
  <%= f.submit %>
<% end %>